<div class="col-lg-12">
  <%= flash[:notice]%>
  <div class="card mt-5 mb-5">
    <div class="card-body">
      <h2 class="text-center">Listing Employees</h2>
    </div>
  </div>
  <div class="row">
    <div class ="col-g-12 mt-1 mb-2">
        <%= link_to 'Create new Employee', new_employee_path ,class: "btn btn-outline-primary rounded-0"%>
    </div>
  </div>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Address</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @employee.each do |employee|%>
        <tr>
          <td><%= employee.name %></td>
          <td><%= employee.personal_email %></td>
          <td><%= employee.full_address%></td>
          <td>
            <div class="dropdown">
              <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                Actions
              </button>
                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                  <li><%= link_to "Edit", edit_employee_path(employee), class: "dropdown-item, btn btn-primary" %></li>
                  <li><%= link_to "View", employee_path(employee), class: "dropdown-item, btn btn-info" %></li>
                  <li><%= link_to "Delete", employee_path(employee), class: "dropdown-item, btn btn-danger", method: :delete, data: { confirm: 'Are you sure you want to delete the employee?' } %></li>
                </ul>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
      